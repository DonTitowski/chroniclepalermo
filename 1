<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Palermo Chronicles</title>
    <style>
        body { font-family: Arial, sans-serif; }
        #game-board { display: flex; flex-direction: column; align-items: center; }
        .card { border: 1px solid #000; padding: 10px; margin: 5px; }
    </style>
</head>
<body>
    <h1>Palermo Chronicles</h1>
    <div id="game-board"></div>

    <script>
        const cards = [
            { type: 'Landmark', name: 'Palermo Cathedral', points: 5, bonus: { type: 'Historical', era: 'Norman', points: 3 } },
            { type: 'Historical', name: 'Medieval Period', era: 'Medieval' },
            { type: 'Cultural', name: 'Cannoli', points: 2, bonus: { type: 'Cultural', name: 'Festivals', points: 2 } },
            { type: 'Event', name: 'Street Festival', effect: 'All players draw 2 additional cards' },
            // Add more cards here...
        ];

        function drawCard() {
            const card = cards[Math.floor(Math.random() * cards.length)];
            return card;
        }

        function displayCard(card) {
            const cardDiv = document.createElement('div');
            cardDiv.classList.add('card');
            cardDiv.innerHTML = `
                <h2>${card.name}</h2>
                <p>Type: ${card.type}</p>
                <p>Points: ${card.points || 'N/A'}</p>
                <p>Bonus: ${card.bonus ? JSON.stringify(card.bonus) : 'None'}</p>
                <p>Effect: ${card.effect || 'None'}</p>
            `;
            return cardDiv;
        }

        function initGame() {
            const gameBoard = document.getElementById('game-board');
            for (let i = 0; i < 5; i++) {
                const card = drawCard();
                const cardDiv = displayCard(card);
                gameBoard.appendChild(cardDiv);
            }
        }

        window.onload = initGame;
    </script>
</body>
</html>
